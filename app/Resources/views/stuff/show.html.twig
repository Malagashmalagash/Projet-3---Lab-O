{% extends 'base.html.twig' %}

{% block body %}
    <h1>Stuff</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stuff.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ stuff.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ stuff.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ stuff.picture }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('stuff_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('stuff_edit', { 'id': stuff.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
