{% extends 'admin/layoutAdmin.html.twig' %}

{% block layout %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Détails de l'équipement "{{ equipment.name }}"</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-2 text-center ">
                <img class="img-responsive imgSize"
                    src="http://www.aspirateur.free.fr/images/Aspirateur-Silencieux-Rowenta-Silence-Force-RO472311.jpg"
                     alt="{{ equipment.name }}">
            </div>
            <div class="col-md-6 text-justify">
                <p>{{ equipment.description }}"></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 col-md-offset-4 text-center ">
                <a type="button" class="btn btn-primary widhtButton" href="{{ path('equipment_index') }}">Retour</a>
            </div>
            <div class="col-md-1 text-justify">
                <a type="button" class="btn btn-warning widhtButton" href="{{ path('equipment_edit', { 'id': equipment.id }) }}">Modifier</a>
            </div>
            <div class="col-md-1 text-justify">
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-danger widhtButton">
                        <i class="icon-trash"></i>
                        Supprimer
                    </button>
                    {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
